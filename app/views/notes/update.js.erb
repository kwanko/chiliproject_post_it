<% if @note.valid? %>
  jQuery("#dialogBox").dialog("close");
  jQuery("#draggable<%= @note.id %>").remove();
  <% if @note.keep_a_copy %>
    jQuery("body").append("<%= escape_javascript(render(:partial => 'postit', :locals => {:note => @note})) %>");
  <%end%>
  jQuery("#notes_ids").val("<%= @notes.collect(&:id) %>");
  message("<%= escape_javascript(@notice) %>", jQuery("#content"));
<% else %>
  message("<%= escape_javascript(@notice) %>", jQuery("#new-note"));
<% end %>
